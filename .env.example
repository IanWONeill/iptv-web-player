# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# Backend Configuration API
BACKEND_API_URL=https://your-backend-server.com/api

# CORS Proxy Configuration
CORS_PROXY_URL=https://your-worker.workers.dev
CORS_PROXY_FALLBACK_1=https://cors-anywhere.herokuapp.com
CORS_PROXY_FALLBACK_2=https://api.allorigins.win/raw?url=

# App Configuration
APP_NAME=IPTV Web Player
APP_VERSION=1.0.0
DEBUG_MODE=false

# Feature Flags
ENABLE_TMDB_INTEGRATION=true
ENABLE_MULTI_SERVICE=true
ENABLE_OFFLINE_MODE=true
ENABLE_CHROMECAST=false
ENABLE_ANALYTICS=false

# Performance Settings
EPG_CACHE_DURATION=3600
CHANNEL_PRELOAD_COUNT=3
VIDEO_BUFFER_SIZE=30
MAX_RETRY_ATTEMPTS=3

# UI Configuration (can be overridden by backend)
DEFAULT_THEME=dark
PRIMARY_COLOR=#1a73e8
ACCENT_COLOR=#00bcd4
SHOW_CHANNEL_NUMBERS=true
MINI_EPG_TIMEOUT=5000
